{
  "info": {
    "name": "Advanced API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"User\", \"email\": \"test@test.com\", \"password\": \"123456\"}"
        },
        "url": {
          "raw": "{{base}}/auth/register",
          "host": [
            "{{base}}"
          ],
          "path": [
            "auth",
            "register"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"test@test.com\", \"password\": \"123456\"}"
        },
        "url": {
          "raw": "{{base}}/auth/login",
          "host": [
            "{{base}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/users/me",
          "host": [
            "{{base}}"
          ],
          "path": [
            "users",
            "me"
          ]
        }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Sample Task\", \"description\": \"Task description\"}"
        },
        "url": {
          "raw": "{{base}}/tasks",
          "host": [
            "{{base}}"
          ],
          "path": [
            "tasks"
          ]
        }
      }
    },
    {
      "name": "Get Tasks",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/tasks",
          "host": [
            "{{base}}"
          ],
          "path": [
            "tasks"
          ]
        }
      }
    },
    {
      "name": "Toggle Task Complete",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/tasks/:id/complete",
          "host": [
            "{{base}}"
          ],
          "path": [
            "tasks",
            ":id",
            "complete"
          ]
        }
      }
    },
    {
      "name": "Update Task",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Updated Title\", \"description\": \"Updated description\"}"
        },
        "url": {
          "raw": "{{base}}/tasks/:id",
          "host": [
            "{{base}}"
          ],
          "path": [
            "tasks",
            ":id"
          ]
        }
      }
    },
    {
      "name": "Delete Task",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/tasks/:id",
          "host": [
            "{{base}}"
          ],
          "path": [
            "tasks",
            ":id"
          ]
        }
      }
    }
  ]
}